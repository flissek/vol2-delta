%nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  %a= link_to Sandbag, root_path, class: 'navbar-brand'
  %button.navbar-toggler{"aria-controls" => "navbarNav", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarNav", "data-toggle" => "collapse", type: "button"}
    %span.navbar-toggler-icon
  #navbarNav.collapse.navbar-collapse
    %ul.navbar-nav
      %li=link_to 'Home', root_path, class: "nav-link #{navbar_active('static_pages', 'index')}"
      %li=link_to 'Ranking', ranking_path, class: "nav-link #{navbar_active('ranking')}"
      %li=link_to 'Crags', crags_path, class: "nav-link #{navbar_active('crags')}"
      %li=link_to 'Climbing routes', climbing_routes_path, class: "nav-link #{navbar_active('climbing_routes')}"
      %li=link_to 'Rules', rules_path, class: "nav-link #{navbar_active('static_pages', 'rules')}"
      %li=link_to 'About', about_path, class: "nav-link #{navbar_active('static_pages', 'about')}"
      %li=link_to 'Contact', contact_path, class: "nav-link #{navbar_active('static_pages', 'contact')}"
      %li.nav-item
  - if current_user
    %a.nav-link.disabled{href: edit_user_registration_path}= current_user.email
    =link_to "Log out", destroy_user_session_path, method: :delete, class: 'btn btn-danger my-2 my-sm-0'
  - else
    =link_to 'Log in', new_user_session_path, class: 'btn btn-success my-2 my-sm-0'
    =link_to 'Register', new_user_registration_path, class: 'btn btn-outline-success my-2 my-sm-0'
